// tsconfig.json
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // ðŸ‘‡ CETTE SECTION EST LA CLÃ‰ POUR RÃ‰GLER L'ERREUR DE CHEMIN ðŸ‘‡
    "baseUrl": ".", // Indique que les chemins relatifs commencent Ã  la racine du projet
    "paths": {
      // Configure l'alias @/ pour pointer vers la racine du projet.
      // Par exemple, @/components/Header pointe vers /components/Header
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
